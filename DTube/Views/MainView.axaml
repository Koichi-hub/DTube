<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:gif="clr-namespace:Avalonia.Labs.Gif;assembly=Avalonia.Labs.Gif"
             xmlns:vm="clr-namespace:DTube.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
             x:Class="DTube.Views.MainView"
             x:DataType="vm:MainViewModel">
  <Design.DataContext>
    <!-- This only sets the DataContext for the previewer in an IDE,
         to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
    <vm:MainViewModel />
  </Design.DataContext>
    
    <UserControl.Styles>
        <StyleInclude Source="avares://DTube/Views/Styles.axaml"/>
    </UserControl.Styles>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Заголовок -->
            <RowDefinition Height="Auto"/>

            <!-- Контент -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Classes="BaseContainerStyle">
            <TextBlock Classes="AppNameStyle" Text="DTube"/>
        </Border>

        <!-- Контент -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="400" MaxWidth="600"/>
                <ColumnDefinition Width="1"/>
                <ColumnDefinition Width="100*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Сайдбар -->
            <Border Classes="BaseContainerStyle" Grid.Column="0" MinWidth="100">
                <StackPanel>
                    <!-- Поиск -->
                    <Border CornerRadius="15" BorderBrush="White" BorderThickness="1">
                        <Grid ColumnDefinitions="*, Auto">
                            <TextBox Grid.Column="0" CornerRadius="15 0 0 15" Text="{Binding SearchText}" Watermark="Ссылка на медиа в youtube...">
                                <TextBox.KeyBindings>
                                    <KeyBinding Command="{Binding SearchCommand}" Gesture="Enter"/>
                                </TextBox.KeyBindings>
                            </TextBox>
                            <Button CornerRadius="0 15 15 0" Grid.Column="1" Background="#FF0033"  Command="{Binding SearchCommand}">
                                <Image Width="16" Height="16" Source="avares://DTube/Assets/search.png" />
                            </Button>
                        </Grid>
                    </Border>

                    <Panel Margin="0 10 0 0" IsVisible="{Binding IsLoaderVisible}">
                        <gif:GifImage Source="avares://DTube/Assets/yt-spinner-loader.gif"/>
                    </Panel>
                    
                    <!-- Медиа блок -->
                    <StackPanel Margin="0 10 0 0">
                        <Border BorderBrush="White" BorderThickness="1">
                            <Image Source="avares://DTube/Assets/media-preview.png"/>
                        </Border>
                        <Border Margin="0 10 0 0">
                            <Grid ColumnDefinitions="Auto, *">
                                <StackPanel Grid.Column="0" Orientation="Vertical">
                                    <TextBlock FontWeight="Bold" Text="Название:" Foreground="White" Margin="0 0 0 5"/>
                                    <TextBlock FontWeight="Bold" Text="Размер:" Foreground="White" Margin="0 0 0 5"/>
                                    <TextBlock FontWeight="Bold" Text="Длительность:" Foreground="White"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="5 0 0 0">
                                    <TextBlock Text="Какое-то название" Foreground="White" Margin="0 0 0 5"/>
                                    <TextBlock Text="1 Гб" Foreground="White" Margin="0 0 0 5"/>
                                    <TextBlock Text="40 минут" Foreground="White"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <Border Margin="0 5 0 0">
                            <StackPanel>
                                <TextBlock FontWeight="Bold" Foreground="White" Text="Описание:" Margin="0 0 0 5"/>
                                <TextBlock Foreground="White" Text="Какое-то описание"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <GridSplitter Background="Black" Grid.Column="1" ResizeDirection="Columns"/>

            <!-- Основной контент -->
            <Border Classes="BaseContainerStyle" Grid.Column="2">
                <Grid RowDefinitions="Auto, *">
                    <Grid Grid.Row="0" ColumnDefinitions="*, Auto">
                        <Border Grid.Column="0"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button CornerRadius="15 0 0 15" Background="#808080">Видео</Button>
                            <Button CornerRadius="0 15 15 0" Background="#808080">Музыка</Button>
                        </StackPanel>
                    </Grid>
                    <Border Grid.Row="1" />
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
